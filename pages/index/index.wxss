/**index.wxss**/

.lunch {
  width: 100%;
}

.item {
  display: flex;
  flex-direction: row;
  height: 250px;
}

.title {
  flex: 1;
  text-align: center;
  vertical-align: middle;
  font-size: 50px;
  line-height: 250px;
  background: rgba(255, 255, 255, 0.2);
}

.good {
  background-color: #7e7;
}

.bad {
  background-color: #e77;
}

.info {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 10px;
}

.restaurant {
  flex-basis: 1;
  flex-grow: 0;
  margin: 10px 0;
}

.restaurantTitle {
  font-size: 18px;
  font-weight: bold;
}

.action {
  margin-top: 10px;
}

.actionButton {
  display: inline-block;
}

.actionButton + .actionButton {
  margin-left: 8px;
}